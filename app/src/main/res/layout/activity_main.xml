<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg24">

    <TextView android:text="@string/head" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHead"
        android:textColor="#fd0b54f0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:id="@+id/btnaboutMe"
        android:layout_alignParentBottom="true"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:smoothScrollbar="false"
        android:layout_below="@+id/txtHead"
        android:layout_above="@+id/btnaboutMe"
        android:layout_margin="20dp"
        android:background="#96ffffff" />
</RelativeLayout>
